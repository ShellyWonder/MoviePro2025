@page "/"
@inject IJSRuntime JS
@layout HomeLayout



<PageTitle>Home</PageTitle>
<!--PAGE BKGRD-->
<div class=" h-100 d-flex justify-content-center">
    <div class="row row-cols-1 row-cols-xl-2 container-xxl h-100 my-2">
        <div class="col d-flex flex-column justify-content--center order-last order-xl-first">
            <h1 class="title text-center">Wonder Movie Pro</h1>
            <p class="subtitle">While integrating The Movie Database (TMDB) API,
                Wonder Movie Pro
                provides a user-friendly movie discovery experience. 
                The app showcases popular, top-rated, now playing, 
                and upcoming movies. Spot an interesting movie 
                but don't have time to check it out now? Save it to your "favorites" list.  With Wonder Movie Pro, you can even search movies by title, 
                cast, crew, genre and providers.</p>
            <div class="mt-3">
                <h3 class="cta">Try It Out Now!</h3>
                <div class="hstack gap-2">
                    <a href="now-playing" class="btn btn-home">Now Playing</a>
                    <a href="popular" class="btn btn-home">Popular</a>
                    <a href="favorites" class="btn btn-home">Favorites</a>
                </div>
            </div>
            <div class="mt-3">
                Built with pride using:
                <div class="hstack my-2">
                    <div><i class="devicons devicon-csharp-plain me-1"></i></div>
                    <div><i class="devicons devicon-bootstrap-plain me-1"></i></div>
                    <div><i class="devicons devicon-blazor-original me-1"></i></div>
                    <div><i class="devicons devicon-html-plain me-1"></i></div>
                    <div><i class="devicons devicon-css3-plain me-1"></i></div>

                </div>
            </div>
        </div>
        <div class="col d-flex flex-column justify-content-center">
            <img src="/img/mobile_movie_logo_purple.png" class="img-fluid" />
        </div>
    </div>
</div>